{
  "name": "mudek-ders-degerlendirme-sistemi",
  "version": "2.0.0",
  "description": "RTEU MUDEK Ders Degerlendirme ve Akreditasyon Sistemi - Masaustu Uygulamasi",
  "main": "electron-main.js",
  "homepage": "https://coruhtech.github.io/mudek-ders-degerlendirme-formu/app/v2/",
  "author": {
    "name": "Dr. Ogr. Uyesi Ugur CORUH",
    "email": "ugur.coruh@erdogan.edu.tr",
    "url": "https://www.coruh.com.tr"
  },
  "company": "CORUH Arastirma ve Gelistirme Ltd. Sti.",
  "copyright": "© 2025 CORUH ArGe. Tum haklari saklidir.",
  "license": "MIT",
  "scripts": {
    "setup": "node scripts/build-setup.js",
    "start": "npm run setup && electron .",
    "dev": "npm run setup && electron . --dev", 
    "prebuild": "npm run setup",
    "build": "electron-builder",
    "build:win": "electron-builder --windows",
    "build:mac": "electron-builder --mac",
    "build:mac-intel": "electron-builder --mac --x64",
    "build:mac-m1": "electron-builder --mac --arm64",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --windows --mac --linux",
    "build:all-platforms": "npm run build:win && npm run build:mac-intel && npm run build:mac-m1 && npm run build:linux",
    "dist": "npm run build:all-platforms",
    "pack": "electron-builder --dir",
    "web": "cd app/v2 && python -m http.server 8080",
    "serve": "cd app/v2 && npx http-server -p 8080 -c-1",
    "postinstall": "npm run setup",
    "create-icon": "node create-icon.js",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "build": {
    "appId": "com.coruh.mudek-ders-degerlendirme",
    "productName": "MUDEK Ders Degerlendirme Sistemi",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "app/v2/**/*",
      "!app/v1/**/*",
      "!test-json/**/*",
      "!git-scripts/**/*",
      "!docs/**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "app/v2/assets",
        "to": "assets"
      }
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "app/v2/assets/img/app-icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "MUDEK-System-${version}-Windows-${arch}.${ext}",
      "verifyUpdateCodeSignature": false,
      "rfc3161TimeStampServer": "",
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "app/v2/assets/img/app-icon.icns",
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "app/v2/assets/img/app-icon.png",
      "category": "Education",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}",
      "desktop": {
        "Name": "MUDEK Ders Degerlendirme Sistemi",
        "Comment": "RTEÜ MUDEK Ders Değerlendirme ve Akreditasyon Sistemi",
        "Keywords": "mudek;ders;degerlendirme;akreditasyon;rteu;education",
        "Categories": "Education;Office;Development"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "app/v2/assets/img/app-icon.ico",
      "uninstallerIcon": "app/v2/assets/img/app-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MUDEK Degerlendirme",
      "displayLanguageSelector": false,
      "language": "1033",
      "artifactName": "MUDEK-Setup-${version}-Windows-x64.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "app/v2/assets/img/app-icon.icns",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "format": "ULFO"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.33.2",
    "to-ico": "^1.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coruhtech/mudek-ders-degerlendirme-formu.git"
  },
  "keywords": [
    "mudek",
    "ders",
    "degerlendirme",
    "akreditasyon",
    "rteu",
    "electron",
    "masaustu",
    "egitim",
    "assessment",
    "universite"
  ]
}
